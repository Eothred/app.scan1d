<project name="config" basedir="." default="all">
    <!-- XAL Home is where this file resides -->
    <dirname property="xal.home" file="${ant.file.config}" />
    
    <property environment="env" />
    
	<property name="build.root" value="${xal.home}/build" />
	<property name="build.compile.root" value="${build.root}/compile" />
	<property name="build.compile.core.root" value="${build.compile.root}/core" />
	<property name="build.compile.core.test.root" value="${build.compile.root}/test/core" />
	<property name="build.jar.root" value="${build.root}/jar" />
    
	<property name="junit.classpath" value="/usr/share/java/junit.jar" />
    
    <!-- Determine the installation directory using the environment variable if defined, and otherwise the dist directory under the build root -->
    <condition property="install.root" value="${env.XAL_INSTALL_ROOT}" else="${build.root}/dist">
        <isset property="env.XAL_INSTALL_ROOT" />
    </condition>

    <target name="demo">
        <echo message="Build root: ${build.root}" />
    </target>
</project>